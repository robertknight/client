{
  "extends": [
    "hypothesis",
    "plugin:react/recommended"
  ],
  "globals": {
    "Set": false
  },
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "no-var": "error",
    "indent": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "mocha",
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "createElement",
      "version": "16.8"
    }
  }
}
